@model List<Subject>
<div class="card box-shadow border-1 mt-4">
	<div class="card-header bg-secondary bg-gradient modal-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Danh sách môn học</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6"></div>
			<div class="col-6 text-end">
				<a class="btn btn-secondary" asp-action="Upsert" asp-controller="Subject">
					<i class="bi bi-plus-circle"></i> Tạo mới môn học
				</a>
			</div>
		</div>
		<table class="table table-bordered table-striped">


			<thead>
				<tr>
					<th>ID</th>
					<th>Mã học phần</th>
					<th>Tên học phần</th>
					<th>Số tín chỉ</th>
					<th>Bộ môn</th>
					<th>Thao tác</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr>
						<td>@obj.Id</td>
						<td>@obj.CourseCode</td>
						<td>@obj.SubjectName</td>
						<td>@obj.Credits</td>
						<td>@obj.Department.DepartmentName</td>

						<td>
							<div class="w-75 btn-group" role="group">
								<a class="btn btn-secondary mx-2 rounded" asp-action="Upsert" asp-controller="Subject" asp-route-id="@obj.Id">
									<i class="bi bi-pencil-square"></i>
									Sửa
								</a>
								<a class="btn btn btn-danger mx-2 rounded" asp-action="Delete" asp-controller="Subject" asp-route-id="@obj.Id">
									<i class="bi bi-trash-fill"></i>
									Xóa
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
@section Scripts {
	<script src="~/js/delete.js"></script>
}