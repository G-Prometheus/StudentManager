@model Faculty

<div class="card box-shadow border-1 mt-4">
	<div class="card-header bg-secondary bg-gradient modal-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">@(Model.Id!=0 ? "Cập nhật" : "Thêm") khoa/viện</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="border p-3">

				<div class="form-floating py-2 col-12">
					<input asp-for="faculty_id" class="form-control border-0 shadow" required>
					<label asp-for="faculty_id" class="ms-2"></label>
					<span asp-validation-for="faculty_id" class="text-danger p-0"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="faculty_name" class="form-control border-0 shadow" required>
					<label asp-for="faculty_name" class="ms-2"></label>
					<span asp-validation-for="faculty_name" class="text-danger p-0"></span>
				</div>


				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-secondary form-control">
							@(Model.Id != 0 ? "Cập nhật" : "Thêm")
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a class="btn btn-outline-secondary form-control" asp-action="Index" asp-controller="Faculty">
							Quay lại
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
@section Scripts{
	@{
		<partial name = "_ValidationScriptsPartial" />
	}
}