@model DepartmentVM

<div class="card box-shadow border-1 mt-4">
	<div class="card-header bg-secondary bg-gradient modal-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">@(Model.Department.Id != 0 ? "Cập nhật" : "Thêm") bộ môn</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="border p-3">
				<input asp-for="Department.Id" type="hidden" />

				<div class="form-floating py-2 col-12">
					<input asp-for="Department.DepartmentId" class="form-control border-0 shadow" required>
					<label asp-for="Department.DepartmentId" class="ms-2"></label>
					<span asp-validation-for="Department.DepartmentId" class="text-danger p-0"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Department.DepartmentName" class="form-control border-0 shadow" required>
					<label asp-for="Department.DepartmentName" class="ms-2"></label>
					<span asp-validation-for="Department.DepartmentName" class="text-danger p-0"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Department.Leader" class="form-control border-0 shadow" required>
					<label asp-for="Department.Leader" class="ms-2"></label>
					<span asp-validation-for="Department.Leader" class="text-danger p-0"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<select asp-for="Department.FacultyId" asp-items="@Model.FacultyList" class="form-select border-0 shadow" required>
						<option disabled selected>--Chọn khoa/viện--</option>
					</select>
					<label asp-for="Department.FacultyId" class="ms-2"></label>
					<span asp-validation-for="Department.FacultyId" class="text-danger p-0"></span>
				</div>

				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-secondary form-control">
							@(Model.Department.Id != 0 ? "Cập nhật" : "Thêm")
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a class="btn btn-outline-secondary form-control" asp-action="Index" asp-controller="Department">
							Quay lại
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}